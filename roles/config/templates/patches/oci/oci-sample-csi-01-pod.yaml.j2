apiVersion: v1
kind: Pod
metadata:
  name: app
  namespace: {{ oci_samples_namespace | d('oci-samples') }}
spec:
    containers:
    - name: app
      image: centos
      command: ["/bin/sh"]
      args: ["-c", "while true; do echo $(date -u) >> /data/out.txt; sleep 5; done"]
      volumeMounts:
        - name: persistent-storage
          mountPath: /data
    volumes:
    - name: persistent-storage
      persistentVolumeClaim:
        claimName: oci-bv-claim
